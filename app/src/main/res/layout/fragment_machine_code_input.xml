<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:id="@+id/binary_number_input_root"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:orientation="vertical">

    <Button
        android:id="@+id/zeroInputBtn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="25dp"
        android:layout_toStartOf="@+id/userCommandTv"
        android:background="@drawable/square"
        android:backgroundTint="@color/practiceAllQuestionsBtnColor"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/finished_quiz_headings_color"
        android:textSize="40sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answerField"/>

    <Button
        android:id="@+id/backspaceBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/userCommandTv"
        android:background="@drawable/square"
        android:backgroundTint="@color/practiceAllQuestionsBtnColor"
        android:foreground="@drawable/ic_backspace_black_24dp"
        android:foregroundGravity="center"
        android:textAlignment="center"
        android:textColor="@color/finished_quiz_headings_color"
        android:textSize="40sp"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/answerField"
        app:layout_constraintRight_toLeftOf="@+id/oneInputBtn"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toRightOf="@+id/zeroInputBtn"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.514"/>

    <Button
        android:id="@+id/oneInputBtn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/square"
        android:backgroundTint="@color/practiceAllQuestionsBtnColor"
        android:text="1"
        android:textColor="@color/finished_quiz_headings_color"
        android:textSize="40sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answerField"/>

    <TextView
        android:id="@+id/userCommandTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/questionPrompt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/square"
        android:backgroundTint="@color/practiceAllQuestionsBtnColor"
        android:gravity="center_vertical|center_horizontal"
        android:padding="5dp"
        android:text="add $t2, $t9, $t3"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/toolbarTextColor"
        android:textSize="30sp"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionPrompt"/>

    <TextView
        android:id="@+id/questionPromptBottom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/userCommandTv"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:text="to Machine Code"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="25sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userCommandTv"/>

    <TextView
        android:id="@+id/questionPrompt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:text="Convert"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="25sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/answerField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:background="@color/practiceAllQuestionsBtnColor"
        android:inputType="text|textMultiLine"
        android:maxLines="3"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textAlignment="center"
        android:textColor="@color/finished_quiz_headings_color"
        android:textSize="30sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionPromptBottom"/>

</android.support.constraint.ConstraintLayout>